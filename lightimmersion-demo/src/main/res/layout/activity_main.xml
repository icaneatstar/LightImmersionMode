<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="spa.lyh.cn.lightimmersionmode.MainActivity">
    <View
        android:background="@color/bar_color"
        android:layout_width="match_parent"
        android:layout_height="24dp"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    >
    <Button
        android:id="@+id/normalactivity"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/normal_activity"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/changeconfig"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/changeconfig"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/fragment"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/fragment"
        android:onClick="onClick"/>
</LinearLayout>

</RelativeLayout>
